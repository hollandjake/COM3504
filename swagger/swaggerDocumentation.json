{
  "openapi": "3.0.2",
  "info": {
    "version": "1.0.0",
    "title": "COM3504 Assignment",
    "description": "User management API",
    "termsOfService": "http://api_url/terms/",
    "contact": {
      "name": "Team \"; DROP TABLE grades; --\"",
      "email": "wbabbage1@shef.ac.uk",
      "url": "http://shef.ac.uk"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Main Server"
    }
  ],
  "paths": {
    "/image?id={}": {
      "get": {
        "tags": [
          "Image Operations"
        ],
        "description": "Return an image from its ID",
        "parameters": [
          {
            "name": "Image ID",
            "in": "query",
            "description": "specifies the image ID",
            "required": true,
            "example": 3
          }
        ],
        "responses": {
          "200": {
            "description": "Image correctly returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Image"
                }
              }
            }
          },
          "400": {
            "description": "No image ID specified",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "No image id specified try '/image?id=someid'"
                }
              }
            }
          },
          "404": {
            "description": "Image not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Image not found"
                }
              }
            }
          }
        }
      }
    },
    "/image/list": {
      "get": {
        "tags": [
          "Image Operations"
        ],
        "description": "Get all images, or a single specified image",
        "parameters": [
          {
            "name": "Image ID",
            "in": "query",
            "description": "Specifies the image ID if only returning one image",
            "required": false,
            "example": 3
          }
        ],
        "responses": {
          "200": {
            "description": "Image/images correctly returned",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/Image"
                    },
                    {
                      "$ref": "#/components/schemas/ImageArray"
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Images not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Images not found"
                }
              }
            }
          }
        }
      }
    },
    "/image/create": {
      "post": {
        "tags": [
          "Image Operations"
        ],
        "description": "Create a new image",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ImageForm"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Image created correctly",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Image"
                }
              }
            }
          },
          "400": {
            "description": "Failed to create image",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Failed to create Image - No image file specified"
                }
              }
            }
          }
        }
      }
    },
    "/job?id={}": {
      "get": {
        "tags": [
          "Job Operations"
        ],
        "description": "Renders the job page for the specified job, or if Job ID is null then renders a blank job page",
        "parameters": [
          {
            "name": "Job ID",
            "in": "query",
            "description": "specifies the job ID",
            "required": false,
            "example": 3
          }
        ],
        "responses": {
          "200": {
            "description": "Renders the page of the specified job, or blank job page if not a valid job"
          }
        }
      }
    },
    "/job/list": {
      "get": {
        "tags": [
          "Job Operations"
        ],
        "description": "Get all jobs, or a single specified job",
        "parameters": [
          {
            "name": "Job ID",
            "in": "query",
            "description": "Specifies the job ID if only returning one job",
            "required": false,
            "example": 3
          }
        ],
        "responses": {
          "200": {
            "description": "Job/jobs correctly returned",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/Job"
                    },
                    {
                      "$ref": "#/components/schemas/JobArray"
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Job not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Job not found"
                }
              }
            }
          }
        }
      }
    },
    "/job/create": {
      "post": {
        "tags": [
          "Job Operations"
        ],
        "description": "Create a new job",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JobForm"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Job created correctly",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Job"
                }
              }
            }
          },
          "400": {
            "description": "Failed to create job",
            "content": {
              "application/json": {
                "properties": {
                  "error": {
                    "$ref": "#/components/schemas/Error"
                  },
                  "imageForm": {
                    "$ref": "#/components/schemas/JobForm"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/job/add-image?id={}": {
      "post": {
        "tags": [
          "Job Operations"
        ],
        "description": "Create a new image",
        "parameters": [
          {
            "name": "Job ID",
            "in": "query",
            "description": "Specifies the ID of the job to add the image to",
            "required": false,
            "example": 3
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ImageForm"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Image created correctly",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Image"
                }
              }
            }
          },
          "400": {
            "description": "Failed to create Image",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "string"
                        }
                      }
                    },
                    "imageForm": {
                      "$ref": "#/components/schemas/ImageForm"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "number_id": {
        "type": "number",
        "description": "ID of object",
        "example": "3"
      },
      "string_id": {
        "type": "string",
        "description": "ID of offline object",
        "example": "3"
      },
      "offline_id": {
        "type": "string",
        "description": "ID of offline object",
        "example": "GSWAMDKOB"
      },
      "title": {
        "type": "string",
        "description": "Title of object",
        "example": "Object name",
        "required": true
      },
      "creator": {
        "type": "string",
        "description": "Creator of object",
        "example": "John Doe",
        "required": true
      },
      "description": {
        "type": "string",
        "description": "Description of object",
        "example": "Object number 5 of 7",
        "required": true
      },
      "imageData": {
        "type": "string",
        "description": "Base64 encoding of image",
        "example": "data:image/png;base64,",
        "required": true
      },
      "type": {
        "type": "string",
        "description": "Upload type of object",
        "example": "url",
        "required": true
      },
      "name": {
        "type": "string",
        "description": "Name of object",
        "example": "Job 7",
        "required": true
      },
      "imageSequence": {
        "type": "number",
        "description": "Image IDs in job",
        "example": "[1, 2]",
        "required": true
      },
      "Image": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/number_id"
          },
          "title": {
            "$ref": "#/components/schemas/title"
          },
          "creator": {
            "$ref": "#/components/schemas/creator"
          },
          "description": {
            "$ref": "#/components/schemas/description"
          },
          "imageData": {
            "$ref": "#/components/schemas/imageData"
          },
          "type": {
            "$ref": "#/components/schemas/type"
          }
        }
      },
      "ImageArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Image"
        }
      },
      "ImageForm": {
        "type": "object",
        "properties": {
          "image_creator": {
            "$ref": "#/components/schemas/creator"
          },
          "image_description": {
            "$ref": "#/components/schemas/description"
          },
          "image_source": {
            "$ref": "#/components/schemas/imageData"
          },
          "image_title": {
            "$ref": "#/components/schemas/title"
          },
          "image_type": {
            "$ref": "#/components/schemas/type"
          },
          "job_creator": {
            "$ref": "#/components/schemas/creator"
          },
          "job_name": {
            "$ref": "#/components/schemas/name"
          },
          "_id": {
            "$ref": "#/components/schemas/offline_id"
          }
        }
      },
      "Job": {
        "type": "object",
        "properties": {
          "_id": {
            "$ref": "#/components/schemas/string_id"
          },
          "name": {
            "$ref": "#/components/schemas/name"
          },
          "creator": {
            "$ref": "#/components/schemas/creator"
          },
          "imageSequence": {
            "$ref": "#/components/schemas/imageSequence"
          }
        }
      },
      "JobArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Job"
        }
      },
      "JobForm": {
        "type": "object",
        "properties": {
          "job_name": {
            "$ref": "#/components/schemas/name"
          },
          "job_creator": {
            "$ref": "#/components/schemas/creator"
          },
          "image_creator": {
            "$ref": "#/components/schemas/creator"
          },
          "image_description": {
            "$ref": "#/components/schemas/description"
          },
          "image_source": {
            "$ref": "#/components/schemas/imageData"
          },
          "image_title": {
            "$ref": "#/components/schemas/title"
          },
          "image_type": {
            "$ref": "#/components/schemas/type"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      }
    }
  }
}
